<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="CENTER" prefHeight="358.0" prefWidth="398.0" spacing="20.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="dev.achilles.passwordgenfx.HelloController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <Label text="Achilles Password Generator">
      <font>
         <Font size="21.0" />
      </font></Label>
   <HBox prefHeight="108.0" prefWidth="358.0">
      <children>
         <VBox prefHeight="108.0" prefWidth="246.0">
            <children>
               <CheckBox fx:id="checkBoxUpperCase" mnemonicParsing="false" text="include Upper Case" />
               <CheckBox fx:id="checkBoxLowerCase" mnemonicParsing="false" text="include Lower Case" />
               <CheckBox fx:id="checkBoxNumbers" mnemonicParsing="false" text="include Numbers" />
               <CheckBox fx:id="checkBoxSymbols" mnemonicParsing="false" text="include Symbols" />
            </children>
         </VBox>
         <Label prefHeight="25.0" prefWidth="64.0" text="Length:" />
         <TextField fx:id="passwordLength" prefHeight="25.0" prefWidth="48.0" />
      </children></HBox>

    <Label fx:id="welcomeText">
      <font>
         <Font size="15.0" />
      </font></Label>
    <Button onAction="#onHelloButtonClick" text="Generate" />
   <Label fx:id="labelCopied" />
</VBox>
